<h1 class="edit">Editing Book</h1>
<% if @book.errors.any? %>
<div class="error">
 <h2 class="error-mes"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>

 <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
 </ul>
</div>
<% end %>


<%= form_with model: @book do |f| %>
<div class="form-box">
 <div class="field">
  <label for="form-name">Title</label>
 </div>
 <div class="field">
  <div class="form"><%= f.text_field :title %></div>
 </div>
</div>

<div class="form-box">
 <div class="field">
  <label for="form-name">Body</label>
 </div>
 <div class="field">
  <div class="form"><%= f.text_field :body %></div>
 </div>
</div>


<div class="action">
<p><%= f.submit 'Update Book',class:"btn" %></p>
</div>
<% end %>


<a><%= link_to "Show", book_path(@book.id)%></a>
|
<a href="/books">Back</a>